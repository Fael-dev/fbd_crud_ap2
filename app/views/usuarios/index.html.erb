<% if flash[:notice] %>
  <div class="alert alert-info" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= link_to 'Novo usuÃ¡rio', new_usuario_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <hr style="margin: 20px 0px"/>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <table class="table">
        <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">Email</th>
          <th scope="col">Perfil</th>
          <th scope="col">Criado em</th>
          <th scope="col">Editar</th>
          <th scope="col">Deletar</th>
        </tr>
        </thead>
        <tbody>
        <% @usuarios.each do | usuario | %>
          <tr>
            <th scope="row"><%= usuario.id %></th>
            <td><%= usuario.nome %></td>
            <td><%= usuario.email %></td>
            <td><%= usuario.tipo %></td>
            <td><%= usuario.created_at.strftime('%d/%m/%Y') %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>