<h2 class="text-center">Entrar no Sistema</h2>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <label for="<%= :email %>">Email:</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Digite seu email cadastrado..." %>
            </div>

            <div class="form-group">
              <label for="<%= :password %>">Senha:</label>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "**********" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.submit "Log in", class: "btn btn-primary" %>
            </div>
          <% end %>
          <div class="form-group">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
